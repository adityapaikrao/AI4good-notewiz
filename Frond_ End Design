    margin-bottom: 20px;
    color: #333;
}

input[type="text"], input[type="password"], input[type="file"] {
    padding: 10px;
    margin: 10px;
    width: 100%;
    border: 1px solid #ccc;
    border-radius: 5px;
}

button {
    width: 100%;
    padding: 10px;
    background: #ff5e62;
    border: none;
    border-radius: 5px;
    color: white;
    font-size: 16px;
    cursor: pointer;
    transition: 0.3s;
}

